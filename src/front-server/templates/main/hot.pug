- const shortClass = (!mostPopular.length || !lastComments.length) ? 'main-page__section-flex--short' : '';
.main-page__section-flex(class=shortClass)

    section.main-page__hot.hot
        h2.hot__name
            | Самое обсуждаемое &nbsp;
            span.hot__icon.hot__icon--fire

        if (mostPopular.length)
            ul.hot__list
              each item in mostPopular
                  li.hot__list-item
                      a.hot__list-link(href=`/articles/${item.id}`) #{item.announce}
                          sup.hot__link-sup #{item.commentsCount}
        else
            p
                | Здесь пока ничего нет

    section.main-page__last.last
        h2.last__name
            | Последние комментарии  &nbsp;
            span.last__icon.last__icon--cloud

        if (lastComments.length)
            ul.last__list
              each comment in lastComments
                - const avatarSrc = comment.userAvatar ? `/img/${comment.userAvatar}` : ``;
                li.last__list-item
                    img.last__list-image(src=avatarSrc width='20' height='20' alt='Аватар пользователя')
                    b.last__list-name #{comment.username}
                    a.last__list-link(href=`/articles/${comment.articleId}`) #{comment.text}
        else
            p
                | Здесь пока ничего нет
