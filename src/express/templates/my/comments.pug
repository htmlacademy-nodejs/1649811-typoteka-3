extends ../layout

block header
  include header

block content
  main.main-page.main-page--padding
    section.main-page__publication.publication
      h1.publication__title Комментарии
      ul.publication__list
        each article in articles
          each comment in article.comments
            li.publication__list-item
              .publication__header
                img.publication__list-image(src='/img/avatar-small-2.png' width='20' height='20' alt='Аватар пользователя')
                b.publication__list-name Александр Петров
                time.publication__item-time(datetime=comment.createdAt) #{dayjs(comment.createdAt).format('DD.MM.YYYY, HH:mm')}

              p.publication__item-text
                | #{comment.text}
              p
                a.publication__text-strong(href=`/articles/${article.id}`)
                  | #{article.title}

              a.publication__button.button.button--close-item(href=`/my/comments/delete/${comment.id}?articleId=${article.id}`)
                span.visually-hidden Закрыть строку списка

block scripts

