extends layout

block header
  include partials/admin-header

block content
  main.main-page.main-page--padding
    section.main-page__notes.notes
      h1.notes__title Мои записи
      ul.notes__list
        each article in articles
          li.notes__list-item
            time.notes__item-time(datetime=article.createdDate) #{dayjs(article.createdDate).format('DD.MM.YYYY, HH:mm')}
            a.notes__item-text(href=`/articles/edit/${article.id}`) #{article.announce}
            button.notes__button.button.button--close-item(type='button')
              span.visually-hidden Закрыть строку списка

block scripts
  //script(src='/js/vendor.js')
  script(src='/js/main.js')
  script(src=`/js/temp.js`)
