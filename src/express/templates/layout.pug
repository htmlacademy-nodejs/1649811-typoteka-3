doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(name='Description' content='Личный блог Типотека')
    title Типотека
    link(rel='preload' href='/fonts/Inter-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='/fonts/Inter-Medium.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='/fonts/SFProDisplay-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/style.min.css')
    link(rel='stylesheet' href='/css/my-style.css')
  body
    .wrapper
      -
        const formatDate = (dateString) => {
          return dayjs(dateString).format('DD.MM.YYYY, HH:mm')
        }

      mixin categoriesList(categories)
        each category in categories
          li.preview__breadcrumbs-item
            a.preview__breadcrumbs-link(href=`/articles/category/${category.id}`) #{category.title}

      block header

      block content

      include partials/footer

    block scripts
